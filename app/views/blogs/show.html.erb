<% if user_signed_in? %>
  <div class="col-xs-3">
    <a class="navbar-brand" href="<%=new_blog_path%>">Write new Blog</a>
    <a class="navbar-brand" href="<%=archived_blogs_blogs_path%>">Archived Blogs</a>
  </div>
<% end %>

<div class="container">
  <div class="col-lg-12"> 
    <div class="row"> 
      <tr>
        <h1><%= @blog.title.html_safe %></h1><brk>
        <body>
          <div id="fb-root"></div>
          <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10';
            fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));</script>

          <div class="fb-share-button" data-href="https://warm-hamlet-32921.herokuapp.com/" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwarm-hamlet-32921.herokuapp.com%2F&amp;src=sdkpreparse">Share</a></div>
        </body>
        <td><%= @blog.published_at %></td>
        <td><%= @blog.text.html_safe %></td>
			</tr>
      <div class="container">
        <% @blog.comments.each do |comment| %>
          <p>
            <strong>Commenter:</strong>
            <%= comment.commenter %>
          </p>
          <p>
            <strong>Comment:</strong>
            <%= comment.comment %>
          </p>
        <% end %>
        <h2>Add a comment:</h2>
        <%= form_with(model: [ @blog, @blog.comments.build ], local: true) do |form| %>
          <div class="card my-4">

          <% if user_signed_in? %>
          <h5 class="card-header">Your email:</h5>
            <div class="card-body">
              <%= form.text_field :commenter, value: current_user.email %>              

            </div>
          <% end %>
          <% if !user_signed_in? %>
            <h5 class="card-header">Your name:</h5>
            <div class="card-body">
              <%= form.text_field :commenter %>
            </div>
          <% end %>
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <%= form.text_area :comment %>
            </div>
          </div><%= form.submit %>           
        <% end %>          
      </div>    
    </div>
  </div>
</div>
