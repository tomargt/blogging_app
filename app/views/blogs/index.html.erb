<div class="BootstrapPagination" style="float: right">
  <%= will_paginate @blogs, renderer: BootstrapPagination::Rails %>
</div> 

<div class="container">
  <div class="col-lg-12"> 
    <div class="row">
      <% @blogs.each do |blog| %>
        <h1><%= blog.title.html_safe %></h1><brk>
        <td><%= blog.published_at %></td><brk>
        <td><%= link_to 'Show', blog_path(blog) %></td>
        <div class="container">
          <% blog.comments.limit(2).each do |comment| %>
            <p>
              <strong>Commenter:</strong>
              <%= comment.commenter %>
            </p>
            <p>
              <strong>Comment:</strong>
              <%= comment.comment %>
            </p>
          <% end %>
          <% if blog.comments.count >= 2 %>
            <%= link_to 'view all comments', blog_comments_path(blog.id) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
